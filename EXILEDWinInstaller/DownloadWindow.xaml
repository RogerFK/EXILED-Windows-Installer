<Window x:Class="EXILEDWinInstaller.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EXILEDWinInstaller"
        mc:Ignorable="d"
        Title="Downloading..." Height="186" Width="492" Background="#3F3F3F"
		WindowStyle="None"
		WindowStartupLocation="CenterOwner"
		ResizeMode="NoResize">

	<Grid>
		<Rectangle MouseDown="DragWindow"/>
		<ProgressBar x:Name="downloadBar" Margin="50,100,50,54.6"/>
		<Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Center" Margin="0,136,0,0" VerticalAlignment="Top" Height="24" Width="51" Click="CancelClick"/>
		<TextBlock x:Name="dlTextBlock" HorizontalAlignment="Center"
		Height="77" Margin="78,10,85,98.6" TextWrapping="Wrap" Text="Default download message" VerticalAlignment="Center"
		TextAlignment="Center" FontWeight="DemiBold" Foreground="WhiteSmoke" Width="329" FontSize="21"/>
		<Image x:Name="image" Source="images/EXILED.png" HorizontalAlignment="Left" Height="68" Margin="10,10,0,0" VerticalAlignment="Top" Width="55"/>
	</Grid>
</Window>
